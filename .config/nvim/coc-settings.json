{
  "tsserver.implicitProjectConfig.experimentalDecorators": true,
  "javascript.suggestionActions.enabled": false,
  "tsserver.tsdk": "node_modules/typescript/lib",
  "tsserver.maxTsServerMemory": 49152,
  "ruff.enableExperimentalFormatter": true,
  "python.formatting.provider": "none",
  "python.formatting.blackArgs": [],
  "python.sortImports.path": "isort",
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.parameterTypes": false,
  "Lua.diagnostics.globals": ["vim"],
  "workspace.ignoredFolders": [
    "$HOME",
    "$HOME/.cargo/**",
    "$HOME/.rustup/**"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "list.floatPreview": true,
  "list.height": 16,
  "list.maxPreviewHeight": 24
}
